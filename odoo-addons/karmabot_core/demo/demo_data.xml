<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Demo Users -->
        <record id="demo_user_1" model="karmabot.user">
            <field name="name">John Doe</field>
            <field name="telegram_id">123456789</field>
            <field name="telegram_username">johndoe</field>
            <field name="telegram_first_name">John</field>
            <field name="telegram_last_name">Doe</field>
            <field name="role">user</field>
            <field name="total_points">150</field>
            <field name="available_points">100</field>
            <field name="spent_points">50</field>
            <field name="total_scans">15</field>
            <field name="is_active">True</field>
            <field name="is_verified">True</field>
        </record>
        
        <record id="demo_user_2" model="karmabot.user">
            <field name="name">Jane Smith</field>
            <field name="telegram_id">987654321</field>
            <field name="telegram_username">janesmith</field>
            <field name="telegram_first_name">Jane</field>
            <field name="telegram_last_name">Smith</field>
            <field name="role">partner</field>
            <field name="total_points">500</field>
            <field name="available_points">300</field>
            <field name="spent_points">200</field>
            <field name="total_scans">50</field>
            <field name="is_active">True</field>
            <field name="is_verified">True</field>
        </record>
        
        <record id="demo_user_3" model="karmabot.user">
            <field name="name">Admin User</field>
            <field name="telegram_id">555666777</field>
            <field name="telegram_username">admin</field>
            <field name="telegram_first_name">Admin</field>
            <field name="telegram_last_name">User</field>
            <field name="role">admin</field>
            <field name="total_points">1000</field>
            <field name="available_points">800</field>
            <field name="spent_points">200</field>
            <field name="total_scans">100</field>
            <field name="is_active">True</field>
            <field name="is_verified">True</field>
        </record>
        
        <!-- Demo User Cards -->
        <record id="demo_card_1" model="karmabot.user.card">
            <field name="user_id" ref="demo_user_1"/>
            <field name="card_number">KS12345678</field>
            <field name="card_type">physical</field>
            <field name="is_active">True</field>
            <field name="usage_count">5</field>
        </record>
        
        <record id="demo_card_2" model="karmabot.user.card">
            <field name="user_id" ref="demo_user_1"/>
            <field name="card_number">V12345678</field>
            <field name="card_type">virtual</field>
            <field name="is_active">True</field>
            <field name="usage_count">10</field>
        </record>
        
        <!-- Demo Transactions -->
        <record id="demo_transaction_1" model="karmabot.loyalty.transaction">
            <field name="user_id" ref="demo_user_1"/>
            <field name="points">10</field>
            <field name="transaction_type">qr_scan</field>
            <field name="description">QR scan reward</field>
            <field name="status">approved</field>
        </record>
        
        <record id="demo_transaction_2" model="karmabot.loyalty.transaction">
            <field name="user_id" ref="demo_user_1"/>
            <field name="points">25</field>
            <field name="transaction_type">welcome</field>
            <field name="description">Welcome bonus</field>
            <field name="status">approved</field>
        </record>
        
        <record id="demo_transaction_3" model="karmabot.loyalty.transaction">
            <field name="user_id" ref="demo_user_1"/>
            <field name="points">-50</field>
            <field name="transaction_type">spend</field>
            <field name="description">Points spent on discount</field>
            <field name="status">approved</field>
        </record>
        
    </data>
</odoo>

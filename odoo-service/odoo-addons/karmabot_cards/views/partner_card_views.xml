<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Partner Card Tree View -->
    <record id="view_karmabot_partner_card_tree" model="ir.ui.view">
        <field name="name">karmabot.partner.card.tree</field>
        <field name="model">karmabot.partner.card</field>
        <field name="arch" type="xml">
            <tree string="Partner Cards" decoration-info="status == 'pending'" decoration-success="status == 'published'" decoration-muted="status == 'archived'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <field name="status"/>
                <field name="discount_percent"/>
                <field name="views_count"/>
                <field name="scans_count"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    
    <!-- Partner Card Form View -->
    <record id="view_karmabot_partner_card_form" model="ir.ui.view">
        <field name="name">karmabot.partner.card.form</field>
        <field name="model">karmabot.partner.card</field>
        <field name="arch" type="xml">
            <form string="Partner Card">
                <header>
                    <button name="action_submit_for_moderation" string="Submit for Moderation" type="object" class="btn-primary" groups="karmabot.group_karmabot_partner" attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" groups="karmabot.group_karmabot_admin" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-warning" groups="karmabot.group_karmabot_admin" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                    <button name="action_publish" string="Publish" type="object" class="btn-info" groups="karmabot.group_karmabot_admin" attrs="{'invisible': [('status', '!=', 'approved')]}"/>
                    <button name="action_archive" string="Archive" type="object" class="btn-secondary" groups="karmabot.group_karmabot_admin" attrs="{'invisible': [('status', 'not in', ['published', 'approved'])]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,pending,approved,published"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_qr_codes" type="object" class="oe_stat_button" icon="fa-qrcode">
                            <field name="qr_code_id" widget="statinfo" string="QR Code"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Business Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="category_id"/>
                            <field name="status"/>
                            <field name="discount_percent"/>
                            <field name="min_points_required"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="website"/>
                            <field name="views_count"/>
                            <field name="scans_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="address"/>
                    </group>
                    <group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group>
                            <field name="special_offers"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Images" name="images">
                            <group>
                                <group>
                                    <field name="image_1" widget="image" class="oe_avatar"/>
                                    <field name="image_2" widget="image" class="oe_avatar"/>
                                    <field name="image_3" widget="image" class="oe_avatar"/>
                                </group>
                                <group>
                                    <field name="image_4" widget="image" class="oe_avatar"/>
                                    <field name="image_5" widget="image" class="oe_avatar"/>
                                    <field name="image_6" widget="image" class="oe_avatar"/>
                                </group>
                            </group>
                        </page>
                        <page string="QR Code" name="qr_code">
                            <group>
                                <field name="qr_code_id"/>
                                <field name="qr_code_image" widget="image" class="oe_avatar"/>
                            </group>
                        </page>
                        <page string="Moderation" name="moderation" groups="karmabot.group_karmabot_admin">
                            <group>
                                <field name="rejection_reason"/>
                                <field name="moderation_notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Partner Card Search View -->
    <record id="view_karmabot_partner_card_search" model="ir.ui.view">
        <field name="name">karmabot.partner.card.search</field>
        <field name="model">karmabot.partner.card</field>
        <field name="arch" type="xml">
            <search string="Search Partner Cards">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Pending Moderation" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Approved" name="approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Published" name="published" domain="[('status', '=', 'published')]"/>
                <filter string="Rejected" name="rejected" domain="[('status', '=', 'rejected')]"/>
                <filter string="Archived" name="archived" domain="[('status', '=', 'archived')]"/>
                <separator/>
                <filter string="High Views" name="high_views" domain="[('views_count', '>=', 100)]"/>
                <filter string="High Scans" name="high_scans" domain="[('scans_count', '>=', 50)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Create Date" name="group_create_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Partner Card Action -->
    <record id="action_karmabot_partner_card" model="ir.actions.act_window">
        <field name="name">Partner Cards</field>
        <field name="res_model">karmabot.partner.card</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_karmabot_partner_card_search"/>
        <field name="context">{'search_default_pending': 1}</field>
    </record>
    
    <!-- QR Code Tree View -->
    <record id="view_karmabot_qr_code_tree" model="ir.ui.view">
        <field name="name">karmabot.qr.code.tree</field>
        <field name="model">karmabot.qr_code</field>
        <field name="arch" type="xml">
            <tree string="QR Codes" decoration-info="not is_active" decoration-muted="is_expired">
                <field name="code_id"/>
                <field name="partner_card_id"/>
                <field name="qr_type"/>
                <field name="is_active"/>
                <field name="scans_count"/>
                <field name="expires_at"/>
            </tree>
        </field>
    </record>
    
    <!-- QR Code Form View -->
    <record id="view_karmabot_qr_code_form" model="ir.ui.view">
        <field name="name">karmabot.qr.code.form</field>
        <field name="model">karmabot.qr_code</field>
        <field name="arch" type="xml">
            <form string="QR Code">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-success" attrs="{'invisible': [('is_active', '=', True)]}"/>
                    <button name="action_deactivate" string="Deactivate" type="object" class="btn-warning" attrs="{'invisible': [('is_active', '=', False)]}"/>
                    <button name="action_reset_scans" string="Reset Scans" type="object" class="btn-secondary"/>
                    <field name="is_active" widget="statusbar" statusbar_visible="active"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="code_id"/>
                            <field name="partner_card_id"/>
                            <field name="qr_type"/>
                            <field name="qr_data"/>
                        </group>
                        <group>
                            <field name="scans_count"/>
                            <field name="unique_scans_count"/>
                            <field name="last_scan_date"/>
                            <field name="max_scans"/>
                            <field name="expires_at"/>
                        </group>
                    </group>
                    <group>
                        <field name="signature"/>
                        <field name="secret_key"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- QR Code Action -->
    <record id="action_karmabot_qr_code" model="ir.actions.act_window">
        <field name="name">QR Codes</field>
        <field name="res_model">karmabot.qr_code</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>

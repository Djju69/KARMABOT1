        <!-- Points Achievements -->
        <record id="achievement_first_points" model="karmabot.achievement">
            <field name="name">First Steps</field>
            <field name="description">Earn your first 10 points</field>
            <field name="icon">🌟</field>
            <field name="color">#FFD700</field>
            <field name="achievement_type">points_total</field>
            <field name="target_value">10</field>
            <field name="points_reward">5</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="achievement_hundred_points" model="karmabot.achievement">

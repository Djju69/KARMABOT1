<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Achievement Tree View -->
    <record id="view_karmabot_achievement_tree" model="ir.ui.view">
        <field name="name">karmabot.achievement.tree</field>
        <field name="model">karmabot.achievement</field>
        <field name="arch" type="xml">
            <tree string="Achievements" decoration-info="not is_active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
                <field name="achievement_type"/>
                <field name="target_value"/>
                <field name="points_reward"/>
                <field name="earned_count"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>
    
    <!-- Achievement Form View -->
    <record id="view_karmabot_achievement_form" model="ir.ui.view">
        <field name="name">karmabot.achievement.form</field>
        <field name="model">karmabot.achievement</field>
        <field name="arch" type="xml">
            <form string="Achievement">
                <header>
                    <button name="action_view_earners" string="View Earners" type="object" class="btn-primary"/>
                    <field name="is_active" widget="statusbar" statusbar_visible="active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_earners" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="earned_count" widget="statinfo" string="Earned By"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Achievement Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="icon"/>
                            <field name="color" widget="color"/>
                            <field name="sequence"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="achievement_type"/>
                            <field name="target_value"/>
                            <field name="target_period"/>
                            <field name="points_reward"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="badge_image" widget="image" class="oe_avatar"/>
                    </group>
                    <notebook>
                        <page string="Earners" name="earners">
                            <field name="user_achievements">
                                <tree>
                                    <field name="user_id"/>
                                    <field name="earned_date"/>
                                    <field name="points_reward"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Achievement Search View -->
    <record id="view_karmabot_achievement_search" model="ir.ui.view">
        <field name="name">karmabot.achievement.search</field>
        <field name="model">karmabot.achievement</field>
        <field name="arch" type="xml">
            <search string="Search Achievements">
                <field name="name"/>
                <field name="achievement_type"/>
                <separator/>
                <filter string="Active Achievements" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Popular Achievements" name="popular" domain="[('earned_count', '>', 10)]"/>
                <filter string="Points Rewards" name="points_reward" domain="[('points_reward', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'achievement_type'}"/>
                    <filter string="Active Status" name="group_active" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Achievement Action -->
    <record id="action_karmabot_achievement" model="ir.actions.act_window">
        <field name="name">Achievements</field>
        <field name="res_model">karmabot.achievement</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_karmabot_achievement_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>
    
    <!-- User Achievement Tree View -->
    <record id="view_karmabot_user_achievement_tree" model="ir.ui.view">
        <field name="name">karmabot.user.achievement.tree</field>
        <field name="model">karmabot.user.achievement</field>
        <field name="arch" type="xml">
            <tree string="User Achievements">
                <field name="user_id"/>
                <field name="achievement_id"/>
                <field name="achievement_name"/>
                <field name="achievement_icon"/>
                <field name="earned_date"/>
                <field name="points_reward"/>
            </tree>
        </field>
    </record>
    
    <!-- User Achievement Form View -->
    <record id="view_karmabot_user_achievement_form" model="ir.ui.view">
        <field name="name">karmabot.user.achievement.form</field>
        <field name="model">karmabot.user.achievement</field>
        <field name="arch" type="xml">
            <form string="User Achievement">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="achievement_id"/>
                            <field name="earned_date"/>
                            <field name="points_reward"/>
                        </group>
                        <group>
                            <field name="achievement_name"/>
                            <field name="achievement_icon"/>
                            <field name="achievement_color"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- User Achievement Action -->
    <record id="action_karmabot_user_achievement" model="ir.actions.act_window">
        <field name="name">User Achievements</field>
        <field name="res_model">karmabot.user.achievement</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>
